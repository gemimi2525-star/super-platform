# Production Environment Configuration Example
# COPY THIS FILE TO .env.production AND FILL IN REAL VALUES
# DO NOT COMMIT .env.production TO GIT

# Next.js Environment
# Explicitly set to production
NODE_ENV=production

# Firebase Configuration (Public)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin Configuration (Secret - Server Side Only)
# Option 1: Service Account JSON (Recommended for some platforms)
FIREBASE_SERVICE_ACCOUNT=

# Option 2: Individual variables
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=

# Rate Limiting Logic (Optional Overrides)
# RATELIMIT_AUTH=10
# RATELIMIT_WRITE=60
# RATELIMIT_READ=300

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION=true
