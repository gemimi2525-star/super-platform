{
    "name": "apicoredata-platform",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "packages/ui",
        "packages/core",
        "packages/business"
    ],
    "scripts": {
        "dev": "next dev --webpack",
        "build": "next build --webpack",
        "start": "next start",
        "lint": "eslint",
        "typecheck": "tsc --noEmit",
        "typecheck:v2": "tsc -p tsconfig.v2.json --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "validate:consistency": "npx tsx coreos/validation/consistency-gate.ts",
        "validate": "npm run validate:consistency",
        "check:no-inline-styles:v2": "bash -c 'set -e; echo \"Checking for inline styles in v2 zone...\"; RESULT=$(grep -rn \"style={\" app/\\[locale\\]/\\(platform-v2\\) modules/design-system 2>/dev/null || true); if [ -n \"$RESULT\" ]; then echo \"ERROR: Inline styles found:\"; echo \"$RESULT\"; exit 1; else echo \"âœ“ No inline styles found\"; fi'",
        "check:no-legacy-imports:v2": "bash scripts/check-no-legacy-imports.sh",
        "content:check": "npx tsx scripts/content-check.ts",
        "prebuild": "npm run content:check"
    },
    "dependencies": {
        "@google-cloud/firestore": "^8.2.0",
        "@opentelemetry/api": "^1.9.0",
        "@tailwindcss/postcss": "^4",
        "@tanstack/react-query": "^5.90.18",
        "dotenv": "^17.2.3",
        "firebase": "^10.7.0",
        "firebase-admin": "^12.0.0",
        "framer-motion": "^12.29.2",
        "gray-matter": "^4.0.3",
        "lucide-react": "^0.562.0",
        "mongodb": "^7.0.0",
        "next": "16.1.3",
        "next-mdx-remote": "^5.0.0",
        "payload": "^2.32.3",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-hot-toast": "^2.6.0",
        "sonner": "^2.0.7",
        "tailwindcss": "^4",
        "zustand": "^5.0.0"
    },
    "devDependencies": {
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitejs/plugin-react": "^5.1.2",
        "@vitest/ui": "^4.0.17",
        "eslint": "^9",
        "eslint-config-next": "16.1.3",
        "happy-dom": "^20.3.4",
        "typescript": "^5",
        "vite": "^7.3.1",
        "vite-tsconfig-paths": "^6.0.4",
        "vitest": "^4.0.17"
    }
}